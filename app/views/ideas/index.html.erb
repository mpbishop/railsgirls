<div class='ideas-heading'>
  <h1>Ideas List</h1>
  <%= link_to 'New Idea', new_idea_path, :class => 'btn btn-primary' %>
</div>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @ideas.each do |idea| %>
      <tr class='clickableRow' href="/ideas/<%= idea.id %>" >
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%=  image_tag(idea.picture_url, :size => "100x100") if idea.picture.present? %></td>
        <td>
        <div class="btn-group">
          <%= link_to 'Show', idea, :class => 'btn' %>
          <%= link_to 'Edit', edit_idea_path(idea), :class => 'btn' %>
          <%= link_to 'Destroy', idea, method: :delete, :class => 'btn btn-danger',  data: { confirm: 'Are you sure?' } %>
        </div>
        </td>   
      </tr>
    <% end %>
  </tbody>
</table>

<br>


